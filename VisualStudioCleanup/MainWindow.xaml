<Window x:Class="VisualStudioCleanup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VisualStudioCleanup"
        Title="Visual Studio 2012+ Setup Cleanup" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ListView Grid.Row="0">
            
        </ListView>
        
        <local:About Visibility="{Binding ShowAbout, Converter={StaticResource BoolToVis}}" Grid.Row="1"/>

        <ProgressBar IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" Height="16" Style="{StaticResource Margins}" Width="Auto" Grid.Row="2"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Button Style="{StaticResource Margins}" Command="{Binding AboutCommand}">About</Button>
            <Button Style="{StaticResource Margins}" Command="{Binding CleanSetupLogsCommand}">Clean setup logs</Button>
            <Button Style="{StaticResource Margins}" Command="{Binding TurnOffHyperVCommand}">Uninstall Hyper-V</Button>
            <Button Style="{StaticResource Margins}">Uninstall selected</Button>
        </StackPanel>
    </Grid>
</Window>
