<Window x:Class="VisualStudioCleanup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visual Studio 2012+ Setup Cleanup" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ListView Grid.Row="0">
            
        </ListView>

        <ProgressBar IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Height="16" Margin="3,6" Width="Auto" Grid.Row="1"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Margin="3,6">About</Button>
            <Button Margin="3,6">Clean setup logs</Button>
            <Button Margin="3,6" Command="{Binding TurnOffHyperVCommand}">Uninstall Hyper-V</Button>
            <Button Margin="3,6">Uninstall selected</Button>
        </StackPanel>
    </Grid>
</Window>
